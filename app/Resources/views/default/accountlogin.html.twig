{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-default panel-login">
                <div class="panel-heading text-center">
                    <h2 class="panel-heading-text">
                        {{ 'Login as Customer'|trans }}
                    </h2>
                </div>
                <div class="panel-body">
                    {#{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}#}

                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">


                            {% for flashMessage in app.session.flashbag.get('cust_error') %}
                                <div class="alert alert-danger">
                                    {{ flashMessage|trans }}
                                </div>
                            {% endfor %}
                            {#{% if error %}#}
                            {#<div class="alert alert-danger">#}
                            {#{{ error.messageKey|trans(error.messageData, 'security') }}#}
                            {#</div>#}

                            {#{% endif %}#}

                            <form action="{{ path('customer_login') }}" method="post">
                                <div class="form-group">
                                    <input type="text" id="username" class="form-control" name="_username"
                                           value="" placeholder="{{ 'Email'|trans }}"/>
                                    {#{{ last_username }}#}
                                </div>
                                <div class=" form-group">
                                    <input type="password" id="password" class="form-control" name="_password"
                                           placeholder="{{ 'Password'|trans }}"/>
                                </div>

                                {#
                                    If you want to control the URL the user
                                    is redirected to on success (more details below)
                                    <input type="hidden" name="_target_path" value="/account" />
                                #}
                                <input type="hidden" name="login_type" value="customer"/>
                                <a href="{{ url('forgot_customer_password') }}">{{ 'Forgot your password'|trans }}</a>
                                <button type=" submit" class="btn btn-default pull-right">{{ 'Login'|trans }}</button>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="panel panel-default panel-login">
                <div class="panel-heading text-center">
                    <h2 class="panel-heading-text">
                        {{ 'Login as Company'|trans }}
                    </h2>
                </div>
                <div class="panel-body">
                    {#{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}#}
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

                            {% for flashMessage in app.session.flashbag.get('company_error') %}
                                <div class="alert alert-danger">
                                    {{ flashMessage|trans }}
                                </div>
                            {% endfor %}
                            {#{% if error %}#}
                            {#<div class="alert alert-danger">#}
                            {#{{ error.messageKey|trans(error.messageData, 'security') }}#}
                            {#</div>#}

                            {#{% endif %}#}

                            <form action="{{ path('company_login') }}" method="post">
                                <div class="form-group">
                                    <input type="text" class="form-control" id="username" name="_username"
                                           value="" placeholder="{{ 'Email'|trans }}"/>
                                </div>
                                {#{{ last_username }}#}
                                <div class="form-group">
                                    <input type="password" class="form-control" id="password" name="_password"
                                           placeholder="{{ 'Password'|trans }}"/>
                                </div>
                                <input type="hidden" name="login_type" value="company"/>
                                <a href="{{ url('forgot_company_password') }}">{{ 'Forgot your password'|trans }}</a>
                                <button type="submit" class="btn btn-default pull-right">{{ 'Login'|trans }}</button>

                                {#
                                    If you want to control the URL the user
                                    is redirected to on success (more details below)
                                    <input type="hidden" name="_target_path" value="/account" />
                                #}

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="signup text-center">
            {{ 'Don\'t have an account'|trans }} <a href="{{ path('register') }}">{{ 'Sign up'|trans }}</a>
            </div>
        </div>
    </div>
{% endblock %}