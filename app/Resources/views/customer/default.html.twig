{% extends 'base.html.twig' %}
{% block topmenu %}
    <a href="{{ path('customer_logout') }}">Logout</a>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12 clearfix">
            <div class="panel panel-default panel-login">
                <div class="panel-heading text-center">
                    <h2 class="panel-heading-text">
                        {{ 'Welcome'|trans }} {{ app.user.name }}
                    </h2>
                </div>
                <div class="panel-body">

                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

                            <div id="exTab1" class="">
                                <ul class="nav nav-pills">
                                    <li class="active">
                                        <a href="#1a" data-toggle="tab">{{ 'Loyalty Points'|trans }}</a>
                                    </li>
                                    <li><a href="#2a" data-toggle="tab">{{ 'Transaction list'|trans }}</a>
                                    </li>
                                    <li><a href="#3a" data-toggle="tab">{{ 'Customer Details' }}</a>
                                    </li>
                                </ul>

                                <div class="tab-content clearfix">
                                    <div class="tab-pane active" id="1a">
                                        <h3>{{ 'Total Points'|trans }} {{ cust_info.cust_info.current_balance }}</h3>
                                    </div>
                                    <div class="tab-pane" id="2a">
                                        <h3></h3>
                                        <table class="table table-striped table-responsive">
                                            <thead>
                                            <tr>
                                                <th><i class="fa fa-newspaper-o"></i> {{ 'Store Name'|trans }}</th>
                                                <th><i class="fa fa-calendar"></i> {{ 'Date'|trans }}</th>
                                                <th><i class="fa fa-shopping-bag"></i> {{ 'Invoice Amount'|trans }}</th>
                                                <th><i class="fa fa-usd"></i> {{ 'Points gained'|trans }} </th>
                                            </tr>
                                            </thead>
                                            <tbody>

                                            {% for trans in cust_trans %}

                                                <tr>
                                                    <td>{{ trans.Store }}</td>
                                                    <td>{{ trans.Date }}</td>
                                                    <td>{{ trans.InvoiceAmount }}</td>
                                                    <td>{{ trans.PointsGained }}</td>

                                                </tr>
                                            {% endfor %}


                                            </tbody>
                                        </table>

                                        <div class="navigation text-center">
                                            <ul class="pagination">
                                                <li class="prev disabled"><span>← Previous</span></li>
                                                <li class="active"><span>1 <span class="sr-only">(current)</span></span>
                                                </li>
                                                <li class="next disabled"><span>Next →</span></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="tab-pane" id="3a">
                                        <h3>{{ 'Customer Details' }}</h3>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="row">
                                                    <div class="col-md-6">{{ 'Name'|trans }}:</div>
                                                    <div class="col-md-6">{{ cust_info.cust_info.cust_name }}</div>
                                                </div>

                                            </div>
                                            <div class="col-md-6">
                                                <div class="row">
                                                    <div class="col-md-6">{{ 'Email'|trans }} :</div>
                                                    <div class="col-md-6">{{ cust_info.cust_info.email }}</div>
                                                </div>

                                            </div>
                                            <div class="col-md-6">
                                                <div class="row">
                                                    <div class="col-md-6">{{ 'Card Status'|trans }} :</div>
                                                    <div class="col-md-6">{{ cust_info.cust_info.card_status }}</div>
                                                </div>

                                            </div>
                                            <div class="col-md-6">
                                                <div class="row">
                                                    <div class="col-md-6">{{ 'Card Number'|trans }} :</div>
                                                    <div class="col-md-6">{{ app.user.loyalityId }}</div>
                                                </div>

                                            </div>
                                            <div class="col-md-6">
                                                <div class="row">
                                                    <div class="col-md-6">{{ 'City'|trans }} :</div>
                                                    <div class="col-md-6">{{ app.user.City }}</div>
                                                </div>

                                            </div>
                                            <div class="col-md-6">
                                                <div class="row">
                                                    <div class="col-md-6">{{ 'Nationality'|trans }} :</div>
                                                    <div class="col-md-6">{{ app.user.nationality }}</div>
                                                </div>
                                            <div class="col-md-6">
                                                <div class="row">
                                                    <div class="col-md-12"> <a href="{{ url('customer_logout') }}" >{{ 'Logout'|trans }}</a></div>
                                                </div>


                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <br/>
    <br/>
    <br/>
    <br/>
    </div>
{% endblock %}