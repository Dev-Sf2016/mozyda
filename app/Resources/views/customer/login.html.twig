{% extends 'base.html.twig' %}
{% block body %}

<section id="vendoredit-reg" class="container">

    <div class="row">

        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 col-centered">


            <div class="panel panel-default">
                <div class="panel-heading">Mozyda Web Application Customer Login</div>
                <div class="panel-body">
                    {#{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}#}
                    <div class="well well-sm">Please provide information below to login</div>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">




                        {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>

{% endif %}

<form action="{{ path('customer_login') }}" method="post">
    <label for="username">Email:</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" />

    <label for="password">Password:</label>
    <input type="password" id="password" name="_password" />

    {#
        If you want to control the URL the user
        is redirected to on success (more details below)
        <input type="hidden" name="_target_path" value="/account" />
    #}

    <button type="submit">login</button>
</form>
<style>
    .col-centered{
        float: none;
        margin: 0 auto;
    }
    </style>
                            {% endblock %}