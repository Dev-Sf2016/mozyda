{% extends 'base.html.twig' %}

{% block body %}
    <section id="store-list" class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                {% if error is defined %}
                    <div class="alert alert-danger">
                        {{ error }}
                    </div>
                {% elseif message is defined %}
                    <div class="alert alert-info">
                        {{ message }}
                    </div>
                {% else %}
                    <div class="panel panel-default">
                        <div class="panel-heading">{{  'Reset password'|trans }}</div>
                        <div class="panel-body">


                            <disv class="row">
                                <div class="col-lg-6 col-md-6 col-lg-offset-3 col-md-offset-3 col-sm-10 col-sm-offset-1 col-xs-12">
                                    {{ form_start(form) }}

                                    {{ form_end(form) }}
                                    {#{{ form_row(form.submit) }}#}

                                </div>
                            </disv>



                        </div>
                    </div>

                {% endif %}
            </div>

        </div>
    </section>
{% endblock %}