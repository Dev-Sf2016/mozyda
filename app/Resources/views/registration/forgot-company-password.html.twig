{% extends 'base.html.twig' %}

{% block body %}
    <section id="store-list" class="container">
        <div class="panel panel-default panel-login">
            <div class="panel-heading text-center">
                <h2 class="panel-heading-text">
                    {{ 'Forgot Your Password'|trans }}
                </h2>
            </div>
            <div class="panel-body">


                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        {% if app.session.flashBag.has('success') %}
                            <div class="alert alert-info">
                                {% for message in app.session.flashBag.get('success') %}
                                    {{ message }}
                                {% endfor %}
                            </div>
                        {% else %}

                            <div class="row">
                                <div class="col-lg-6 col-md-6 col-lg-offset-3 col-md-offset-3 col-sm-10 col-sm-offset-1 col-xs-12">
                                    {{ form_start(form) }}

                                    {{ form_row(form.email) }}
                                    <div class="row">
                                        <div class="col-lg-6 col-md-6 col-sm-10 col-xs-6">

                                            {{ form_row(form.save) }}
                                        </div>
                                        <div class="col-lg-6 col-md-6 col-sm-10 col-xs-6 text-left">
                                            <a href="{{ url('account_login') }}">{{ "Login"|trans }}</a>
                                        </div>

                                        {{ form_end(form) }}
                                        {#{{ form_row(form.submit) }}#}

                                    </div>

                                </div>
                            </div>



                        {% endif %}
                    </div>

                </div>
            </div>
        </div>
    </section>
{% endblock %}