{% extends 'base.html.twig' %}
{% block body %}

    this is the body
    {{ dump(vendors) }}

    <section id="vendor-list" class="container" >

        <div class="row">

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="panel panel-default">
                    <div class="panel-heading">Manager Vendors</div>
                    <div class="panel-body">

                        <!--start of panel body -->
                        <table class="table table-striped table-responsive">
                            <thead>
                            <tr>
                                <th><i class="fa fa-newspaper-o"></i> Vendor Email</th>
                                <th><i class="fa fa-calendar"></i> Creation Date</th>
                                <th><i class="fa fa-calendar"></i> Company Name</th>
                                <th><i class="fa fa-cog"></i> Status</th>
                                <th><i class="fa fa-cogs"></i>  Actions </th>
                            </tr>
                            </thead>
                            <tbody>



                            {% for vendor in vendors %}
                                <tr>
                                    <td>{{ vendor.email }}</td>
                                    <td>{{ vendor.created|date('Y-m-d') }}</td>
                                    <td>{{ vendor.company }}</td>
                                    <td>
                                        {% if vendor.isActive == 1 %}
                                            <span class="label label-success"><i class="fa fa-check"></i> Active</span>
                                        {% else %}

                                            <span class="label label-danger"><i class="fa fa-close"></i> In Active</span>
                                        {% endif %}
                                    </td>
                                    <td>

                                        <a href="{{ path('admin_vendor_edit', { id: vendor.id }) }}" class="btn btn-sm btn-primary">
                                            <i class="fa fa-edit"></i> Edit
                                        </a>
                                    </td>

                                </tr>


                            {% else %}
                                <td colspan="4" align="center">No record found</td>
                            {% endfor %}
                            </tbody>
                        </table>
                        <div class="navigation text-center">
                            {{ pagerfanta(vendors, 'twitter_bootstrap3', { routeName: 'admin_vendors_paginated' }) }}
                        </div>
                        <!--end of  of panel body -->
                    </div>
                </div>
            </div>


        </div>
        </div>
    </section>
    {% endblock %}
