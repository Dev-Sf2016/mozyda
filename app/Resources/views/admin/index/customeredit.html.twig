{% extends 'admin/index.html.twig' %}
{% block admin_subheading %} Update Customer {% endblock %}
{% block adminbody %}

    <div class="row">


        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">


            <div class="panel panel-default">
                <div class="panel-body">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">

                            {{ form_row(form.name) }}
                            {{ form_row(form.email) }}
                            {{ form_row(form.loyality_id) }}
                            {{ form_row(form.city) }}
                            {{ form_row(form.nationality) }}
                            {{ form_row(form.password.first) }}
                            {% do form.password.second.setRendered %}
                            {% do form.refferer_email.setRendered %}
                            <input type="submit" value="{{ 'Update'|trans }}" class="btn btn-lg btn-block btn-success" />
                            {{ form_end(form) }}
                            <div class="form-group">

                                <script>

                                    jQuery('#form_del').submit(function (e) {
                                        var currentForm = this;
                                        e.preventDefault();
                                        BootstrapDialog.confirm("Are you sure?", function (result) {
                                            if (result) {
                                                currentForm.submit();
                                            }
                                        });
                                    });
                                    //    BootstrapDialog.confirm('Hi Apple, are you sure?');
                                </script>
                            </div>
                        </div>


                    </div>

                </div>
            </div>
        </div>
    </div>

{% endblock %}