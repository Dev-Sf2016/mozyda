{% extends 'base.html.twig' %}
{% block body %}

    <section id="vendor-list" class="container" >

        <div class="row">

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="panel panel-default">
                    <div class="panel-heading">{{ 'Manage Companies'|trans }}</div>
                    <div class="panel-body">

                        <!--start of panel body -->
                        <table class="table table-striped table-responsive">
                            <thead>
                            <tr>
                                <th><i class="fa fa-newspaper-o"></i> {{ 'Company Name'|trans }}</th>
                                <th><i class="fa fa-calendar"></i> {{ 'Creation Date'|trans }}</th>
                                <th><i class="fa fa-cog"></i> {{ 'Status'|trans }}</th>
                                <th><i class="fa fa-cogs"></i>  {{ 'Actions'|trans }} </th>
                            </tr>
                            </thead>
                            <tbody>



                            {% for company in companies %}
                                <tr>
                                    <td>{{ company.name }}</td>
                                    <td>{{ company.created|date('Y-m-d') }}</td>
                                    {#<td>{{ vendor.loyalityId }}</td>#}
                                    <td>
                                        {% if company.isActive == 1 %}
                                            <span class="label label-success"><i class="fa fa-check"></i> {{ 'Active'|trans }}</span>
                                        {% else %}

                                            <span class="label label-danger"><i class="fa fa-close"></i> {{ 'In Active'|trans }}</span>
                                        {% endif %}
                                    </td>
                                    <td>

                                        {#<a href="{{ path('admin_company_edit', { id: company.id }) }}" class="btn btn-sm btn-primary">#}
                                        <a href="#" class="btn btn-sm btn-primary">
                                            <i class="fa fa-edit"></i> {{ 'Edit'|trans }}
                                        </a>
                                    </td>

                                </tr>


                            {% else %}
                                <td colspan="4" align="center">No record found</td>
                            {% endfor %}
                            </tbody>
                        </table>
                        <div class="navigation text-center">
                            {{ pagerfanta(companies, 'twitter_bootstrap3', { routeName: 'admin_vendors_paginated' }) }}
                        </div>
                        <!--end of  of panel body -->
                    </div>
                </div>
            </div>


        </div>
        </div>
    </section>
    {% endblock %}
