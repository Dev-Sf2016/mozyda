{% extends 'base.html.twig' %}
{% block body %}

    <section id="vendoredit-reg" class="container">

        <div class="row">

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">


                <div class="panel panel-default">
                    <div class="panel-heading">Update Vendor Information</div>
                    <div class="panel-body">
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                        <div class="well well-sm">Please provide below information</div>
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">


                                <div class="form-group">
                                    {{ form_row(form.email) }}
                                </div>
                                <div class="form-group">
                                    {{ form_row(form.company) }}
                                </div>

                                <div class="form-group">
                                    {{ form_row(form.is_active) }}
                                </div>
                                <div class="form-group">
                                    {{ form_row(form.submit) }}
                                </div>


                                {{ form_end(form) }}
                                <div class="form-group">
                                    <!-- delete form -->
                                    {{ dump(delete_form) }}
                                    {{ form_start(delete_form,  { 'attr' : {'id':"form_del"} }) }}

                                    <link href="{{ asset('default/bootstrap-dialog/bootstrap-dialog.min.css') }}" rel="stylesheet" />
                                    <script src="{{ asset('default/bootstrap-dialog/bootstrap-dialog.min.js') }}"></script>

                                    <input type="submit" value="Delete" class="btn btn-lg btn-block btn-danger" />
                                    {{ form_end(delete_form) }}
                                    <script>

                                        jQuery('#form_del').submit(function(e) {
                                            var currentForm = this;
                                            e.preventDefault();
                                            BootstrapDialog.confirm("Are you sure?", function(result) {
                                                if (result) {
                                                    currentForm.submit();
                                                }
                                            });
                                        });
                                        //    BootstrapDialog.confirm('Hi Apple, are you sure?');
                                    </script>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}