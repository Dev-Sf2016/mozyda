<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Mozyda!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link href="{{ asset('default/fonts/font-awesome/css/font-awesome.min.css') }}" rel="stylesheet" />

        <link href="{{ asset('default/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet" />

        <script type="text/javascript" src="{{ asset('default/js/jquery-2.2.3.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('default/bootstrap/js/bootstrap.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('default/js/custom.js') }}"></script>

    </head>
    <body>
        {% block topmenu %} {% endblock %}
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-globe"></i> <span class="caret"></span></a>
            <ul class="dropdown-menu locales" role="menu">
                <li><a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'ar'})) }}">Arabic</a></li>
                <li><a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'en'})) }}">English</a></li>

                {#{% for locale in locales() %}#}
                    {#<li {% if app.request.locale == locale.code %}class="active"{% endif %}><a href="{{ path(app.request.get('_route', 'blog_index'), app.request.get('_route_params', [])|merge({ _locale: locale.code })) }}">{{ locale.name|capitalize }}</a></li>#}
                {#{% endfor %}#}
            </ul>
        </li>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
